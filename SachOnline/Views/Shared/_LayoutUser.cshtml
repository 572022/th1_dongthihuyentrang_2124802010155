                        <li>
                            <a href="#">Quên mật khẩu</a>
                        </li>
                        <li>
                            <a href="#">Đăng kí thành viên</a>
                        </li>

                        <li>
                            <a href="#">Đăng Xuất</a>
                        </li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">SÁCH THEO NHÀ XUẤT BẢN<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#">NHÀ XUẤT BẢN</a>
                        </li>

                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right md-5">
                <li>
                    <div class="form-group">

                        <input type="text" class="form-control" id="search" placeholder="Tìm kiếm">
                    </div>
                </li>
                <li>
                    <button type="button" class="btn btn-default">Tìm</button>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">

        @{
            Html.RenderPartial("SliderPartial");
        }
        @*CONTAINER*@
        <br />
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
            @{
                Html.RenderPartial("ChuDePartial");
            }
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
            @RenderBody();
        </div>
        @{
            Html.RenderPartial("SachBanNhieuPartial");
        }
    </div>
